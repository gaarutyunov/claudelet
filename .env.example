# Claudelet Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Session Security (generate a secure random string for production)
SESSION_SECRET=change-me-to-a-secure-random-string-at-least-32-chars

# Database
DB_PATH=./data/claudelet.db

# Google OAuth (optional - enables Google login)
# Create credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Anthropic API (optional - enables credential proxy)
# If not set, users must use their own Claude Code authentication
ANTHROPIC_API_KEY=

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock
WORKSPACE_IMAGE=claudelet-workspace:latest
WORKSPACE_MEMORY_LIMIT=2g
WORKSPACE_CPU_LIMIT=1

# Workspace Persistence
WORKSPACE_BASE_PATH=./data/workspaces
CLAUDE_CONFIG_PATH=./data/claude-config

# Security
ALLOWED_DOMAINS=
MAX_SESSIONS_PER_USER=5
